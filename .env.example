NODE_ENV=development
PORT=3000

# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=inventory_db
DB_USER=postgres
DB_PASSWORD=your_password

# JWT
JWT_SECRET=your_jwt_secret
JWT_EXPIRY=1h

# Shopify
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SHOPIFY_SHOP_NAME=your_shop_name

# Sendle
SENDLE_API_KEY=your_sendle_api_key
SENDLE_SANDBOX=true

# Redis
REDIS_URL=redis://localhost:6379

# AWS (for backups)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=your_aws_region
S3_BUCKET_NAME=your_s3_bucket_name

# Required vs Optional Variables
# All variables are required unless marked as (optional)

# Formatting Requirements
# JWT_EXPIRY: Use time units (e.g., 60s, 2m, 1h, 7d)
# SENDLE_SANDBOX: Use 'true' or 'false'
# REDIS_URL: Use the format redis://[username]:[password]@host:port